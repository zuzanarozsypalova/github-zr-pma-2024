<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--match parent bere vlastnosti z předchozího -->
        <!-- Your comment here -->

        <EditText
            android:id="@+id/etName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Zadejte jméno"
            android:textColor="@color/myColor04"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Zadejte příjmení"
            android:textColor="@color/myColor04"
            android:layout_weight="1"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/Place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zadejte obec"
        android:inputType="text"
        android:textColor="@color/myColor04" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Věk"
        android:inputType="number"
        android:layout_weight="2"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="Odeslat"
        android:textSize="18dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/myColor03"
        ></Button>

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Vymazat"
        android:textSize="18dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/myColor03"
        ></Button>
</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="Informace"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textSize="20dp"
        />

</LinearLayout>